@model DownloadMusic.Models.MusicTrackViewModel


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">ویرایش موزیک</h3>
                        <div class="m-login__desc">اطلاعات موزیک را وارد نمایید:</div>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" asp-action="Add" asp-controller="Track" enctype="multipart/form-data" method="post">
                        <div class="box-body">
                            <div class="form-group">
                                <label>نام آهنگ</label>
                                <input type="text" class="form-control  m-input" asp-for="TitleMusic">
                                <span asp-validation-for="TitleMusic" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>شاعر</label>
                                <input type="text" class="form-control  m-input" asp-for="Songwriter">
                                <span asp-validation-for="Songwriter" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>خواننده</label>
                                <input type="text" class="form-control  m-input" asp-for="Vocalist">
                                <span asp-validation-for="Vocalist" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>آلبوم</label>
                                <input type="text" class="form-control  m-input" asp-for="Album">
                                <span asp-validation-for="Album" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>متن آهنگ</label>
                                <input type="text" class="form-control  m-input" asp-for="MusicText">
                                <span asp-validation-for="MusicText" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>توضیحات آهنگ</label>
                                <input type="text" class="form-control  m-input" asp-for="Description">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <label>سبک آهنگ</label>
                            @Html.DropDownListFor(m => m.MusicCategory,
                            new SelectList(Enum.GetValues(typeof(MusicCategory))),
                            "Select Music Category")

                            <div class="row mt-2">
                                <div class="col-12">
                                    <label class="col-form-label">Select Music File</label>
                                    <input asp-for="MusicFile" class="form-control" />
                                    <span asp-validation-for="MusicFile" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="form-group m-form__group">
                                    <label class="col-form-label">Select Music Image</label>
                                    <input class="form-control m-input" asp-for="Image">
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">ذخیره</button>
                        </div>

                        @if (Model.IsResponse)
                        {
                            if (Model.IsSuccess)
                            {
                                <div class="alert alert-success">
                                    @Model.Message
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger">
                                    @Model.Message
                                </div>
                            }
                        }
                    </form>
                </div>
                <!-- /.box -->
            </div>
            <div>
                <a asp-action="GetList">Back to List</a>
            </div>
        </div>
    </section>
</div>
