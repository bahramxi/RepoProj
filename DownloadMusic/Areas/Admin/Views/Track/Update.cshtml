@model DownloadMusic.Models.MusicTrackViewModel


<div class="">
    <div class="">
        <h3 class="m-login__title"> ویرایش موزیک </h3>
        <div class="m-login__desc">اطلاعات موزیک را وارد نمایید:</div>
    </div>
    <form asp-action="Update" asp-controller="Track" class="m-login__form m-form" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="TitleMusic">
            <span asp-validation-for="TitleMusic" class="text-danger"></span>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="Songwriter">
            <span asp-validation-for="Songwriter" class="text-danger"></span>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="Vocalist">
            <span asp-validation-for="Vocalist" class="text-danger"></span>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="Album">
            <span asp-validation-for="Album" class="text-danger"></span>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="MusicText">
            <span asp-validation-for="MusicText" class="text-danger"></span>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        @Html.DropDownListFor(m => m.MusicCategory,
        new SelectList(Enum.GetValues(typeof(MusicCategory))),
        "Select Music Category")

        @*        <select class="form-control" id="StudentGender" name="MusicCategory">
        <option>Select Music Category</option>
        <option>Pop</option>
        <option>Sonati</option>
        <option>Classic</option>
        </select>*@

        <div class="row mt-2">
            <div class="col-12">
                <label class="col-form-label">SelectMusicFile</label>
                <input asp-for="MusicFile" class="form-control" />
                <span asp-validation-for="MusicFile" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group m-form__group">
            <label class="col-form-label">SelectMusicImage</label>
            <input class="form-control m-input" asp-for="Image">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="row mt-2">
            <div class="col-12">
                <button type="submit" class="btn btn-success">ذخیره</button>
            </div>
        </div>

        @if (Model.IsResponse)
        {
            if (Model.IsSuccess)
            {
                <div class="alert alert-success">
                    @Model.Message
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    @Model.Message
                </div>
            }
        }
    </form>

    <div>
        <a asp-action="GetList">Back to List</a>
    </div>
</div>